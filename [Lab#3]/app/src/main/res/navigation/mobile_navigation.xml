        android:id="@+id/nav_top_rated_shows"
        android:name="com.a.tmdbclient.ui.shows.view.TopRatedShowsFragment"
        android:label="Best Shows"
        tools:layout="@layout/fragment_shows" />
    <fragment
        android:id="@+id/nav_now_playing_shows"
        android:name="com.a.tmdbclient.ui.shows.view.NowPlayingShowsFragment"
        android:label="Airing Today Shows"
        tools:layout="@layout/fragment_shows" />

    <fragment
        android:id="@+id/nav_people"
        android:name="com.a.tmdbclient.ui.people.view.PeopleFragment"
        android:label="@string/menu_peoples"
        tools:layout="@layout/fragment_peoples" />

    <fragment
        android:id="@+id/nav_fav_movies"
        android:name="com.a.tmdbclient.ui.movies.view.FavoriteMoviesFragment"
        android:label="Favorite Movies"
        tools:layout="@layout/fragment_peoples" />

